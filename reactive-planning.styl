h1, h2, h3
  margin-bottom 30px

td
  &.hover
    background #e4f1df !important
  &.allowed
    background #eee !important
  .fa
    font-size 30px

.userPlanning
  td
    &:hover
      cursor pointer
      background lightGray !important

form
  margin-bottom 5px

.form-inline
  .control-label
    margin-right 5px

#plannings-list
  [class^=col]
    .background
      margin-bottom 25px
      position relative
      display table
      width 100%
      height 180px
      padding 15px
      background #eee
      &:hover
        background #ddd
        cursor pointer
    .remove
      position absolute
      top 5px
      right 5px
      font-size 20px
      visibility hidden
      &:hover
        color #a94442
    .content
      display table-cell
      vertical-align middle
      font-size 20px
      text-align center
      a
        display inline-block
        margin-top 15px
        font-size 14px
      input
        width 150px
        margin-top 15px
        text-align center
  [class^=col]:hover
    .remove
      visibility visible

.send-emails-button
  width: 160px
  transition width 0.5s ease-in-out, background-color 0.2s ease-in-out
  &.with-icon
    &.btn-primary
      font-size: 20px
      padding: 2px 10px
    &.btn-success
      font-size: 23px
      padding: 0 10px
