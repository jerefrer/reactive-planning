.user-presences-table
  tr
    th, td
      background: white
      vertical-align: middle
    th
      font-weight: bold
      text-align: center
      border-bottom: 2px solid #1A9BD2
      &.event-date
        width: 120px
      &.event-name
        width: 120px
      &.event-detail
        width: 120px
        color: #838383
        font-weight: 500
    td.people-list
      vertical-align: middle
      ul
        margin: 0
        li
          width: 150px
          margin-bottom: 0
          .fa
            position: relative
            top: -1px
            margin-left: 4px
            cursor: pointer
  .available-people
    color: green

ul.people-who-did-not-answer
  li
    float: left
    width: 33%
    width: 40%
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap

.popover
  max-width: 650px
