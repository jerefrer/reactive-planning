.user-presences-table
  tr
    th, td
      background: white
      vertical-align: middle
    th
      font-weight: bold
      text-align: center
      text-transform: uppercase
      border-bottom: 2px solid #1A9BD2
      &.day-name
        width: 150px
    td.people-list
      ul
        margin: 0
        li
          width: 130px
  .available-people
    color: green

ul.people-who-did-not-answer
  li
    float: left
    width: 33%
    width: 40%
    text-overflow: ellipsis
    overflow: hidden
    white-space: nowrap
