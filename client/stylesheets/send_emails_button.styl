.send-emails-button
  width: 177px
  transition: width 0.5s ease-in-out, background-color 0.2s ease-in-out
  &.send-password-emails-button
    width: 230px
  i
    margin-right: 5px
  &.disabled
    cursor: not-allowed
  &.with-icon
    i
      margin-right: 0
    &.btn-primary
      font-size: 20px
      padding: 2px 10px
    &.btn-success
      font-size: 23px
      padding: 0 10px
