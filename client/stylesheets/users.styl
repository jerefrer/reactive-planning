.users-table
  tbody
    tr:hover
      cursor: pointer
      td
        background: #dadada !important

#userForm
  .autoform-array-item-body
    .panel, .form-group
      margin-bottom 0
  .autoform-remove-item, .autoform-add-item
    color #333 !important
    background-color #fff !important
    border-color #ccc !important
    &:hover
      background-color #ebebeb !important
      border-color #adadad !important

.sendPasswordEmails
  width: 177px
  transition: width 0.5s ease-in-out, background-color 0.2s ease-in-out
  i
    margin-right: 5px
  &.disabled
    cursor: not-allowed
  &.with-icon
    i
      margin-right: 0
    &.btn-primary
      font-size: 20px
      padding: 2px 10px
    &.btn-success
      font-size: 23px
      padding: 0 10px

.task-form
  .task
    padding: 5px 10px
    margin-bottom: 10px
  .prefered-tasks
    background: #e9f3e5
  .banned-tasks
    background: #f2dede
