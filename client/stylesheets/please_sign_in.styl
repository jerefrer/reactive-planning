$background-color = #fcf8e3
$border-color = #FFA654

.please-sign-in
  position absolute
  top: 80px
  right: 60px
  width 480px
  padding 10px
  font-size: 16px
  font-weight: 500
  text-align center
  color #8a6d3b
  background $background-color
  -webkit-border-radius 9px
  -moz-border-radius 9px
  border-radius 9px
  border $border-color solid 4px
  &:after
    content ''
    position absolute
    border-style solid
    border-width 0 15px 15px
    border-color $background-color transparent
    display block
    width 0
    z-index 1
    top -15px
    left 378px
  &:before
    content ''
    position absolute
    border-style solid
    border-width 0 18px 18px
    border-color $border-color transparent
    display block
    width 0
    z-index 0
    top -22px
    left 375px


.logo-fullpage
  margin-top: 160px
