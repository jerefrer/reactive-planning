#plannings-list
  [class^=col]
    .background
      margin-bottom: 25px
      position: relative
      display: table
      width: 100%
      height: 180px
      padding: 15px
      background: #eee
      &:hover
        background: #e8e8e8
        cursor: pointer
    .remove
      position: absolute
      top: 5px
      right: 5px
      font-size 20px
      visibility: hidden
      &:hover
        color: #a94442
    .content
      display: table-cell
      vertical-align: middle
      font-size: 20px
      text-align: center
      a
        display: inline-block
        margin: 15px 5px
        font-size: 14px
      input
        width: 150px
        margin: 15px auto 0
        text-align: center
  [class^=col]:hover
    .remove
      visibility: visible
