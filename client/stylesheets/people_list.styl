@import 'nib'

$blue      = #4E9BED
$green     = #8CC63F
$gray      = #444
$lightGray = #999

.people-list
  h3:first-child
    margin-top: 0
  h3
    margin-bottom: 13px
  ul
    li
      display: inline-block
      margin-bottom: 5px
      padding: 5px 10px
      font-size: 16px
      border-radius: 5px
      .bullet
        width: 17px
        height: 17px
        border-radius: 50%
        margin-right: 10px
      .check, .remove
        position: relative
        top: 2px
        left: 1px
        width: 17px
        font-size: 16px
        margin-right: 10px
      .bullet, .name
        display: inline-block
        vertical-align: middle
      .name
        display: inline-block
        width: 150px
        margin-top: 2px
        overflow: hidden
        text-overflow: ellipsis
        white-space: nowrap
      &.selected
        padding: 5px 10px
        color: white
        background: #4e9bed

.users-who-answered
  .people-list
    column-count: 5
    column-width: 200px
    orphans: 10
    ul
      li
        .check
          display: none
        .bullet
          background: $gray
        &.selected
          .bullet
            display: none
          .check
            display: inline-block

.add-person-modal
  .people-list
    column-count: 4
    column-width: 200px
    orphans: 10
    ul
      li
        cursor: pointer
        .check, .remove
          display: none
        .bullet
          display: inline-block
        &:hover:not(.selected)
          padding: 3px 8px
          border: 2px solid $blue
          .bullet
            background: $blue
        &.selected
          .bullet
            display: none
          .check
            display: inline-block
          &:hover
            .check
              display: none
            .remove
              display: inline-block
    .available-people
      h3
        color: $green
      ul li .bullet
        background: $green
    .people-who-did-not-answer
      color: $gray
      ul li .bullet
        background: $gray
    .unavailable-people
      color: $lightGray
      ul li .bullet
        background: $lightGray
