$bleu-maison24 = #1A9BD2

body
  font-family: 'Roboto', sans-serif
  background: url('beige_paper.png')

.container
  position relative

.navbar
  background-color: white
  border: none
  box-shadow: 0 0 3px gray
  border-top-right-radius: 0
  border-top-left-radius: 0
  .navbar-brand
    color: $bleu-maison24
    font-weight: 500
    &:hover
      color: $bleu-maison24
    img
      display inline-block
      position relative
      top -10px
      width 53px
      margin-right 5px
      vertical-align top
  .toggleFluid
    font-size 25px
    line-height 50px
    color #666
    i
      padding: 0 5px 0 11px
    &:hover
      color #333
      cursor: pointer

h1, h2, h3
  margin-bottom 30px

a
  cursor: pointer

.link-with-arrow
  i
    padding-left: 5px
    font-size: 80%
    transition: padding 0.1s ease-in-out
  &:hover
    i
      padding-left: 7px


table
  tr
    th
      vertical-align: middle !important
      text-align: center

table.table-bordered
  th, td
    &:last-child
      border-right-width: 1px

.btn-primary
  background-color: $bleu-maison24
