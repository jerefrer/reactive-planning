.title-centered
  text-align: center
  margin: 50px 0 40px

#home
  [class^=col]
    display: table
    .background
      display: table
      width: 100%
      height: 180px
      font-size: 28px
      font-weight: bold
      .content
        text-align: center
    .content
      display: table-cell
      height: 180px
      vertical-align: middle
      line-height: 40px
      &.status, &.links
        font-size: 18px
      &.status
        padding-left: 30px
        ul
          margin: 0
          padding: 0
          list-style: none
      &.links
        padding-left: 20px
        a
          display: block
      .fa-warning
        margin-right: 5px
