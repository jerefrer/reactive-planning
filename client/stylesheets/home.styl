#home
  [class^=col]
    display: table
    .background
      display: table
      width: 100%
      height: 180px
      font-size: 28px
      font-weight: bold
      .content
        text-align: center
    .content
      display: table-cell
      height: 180px
      vertical-align: middle
      line-height: 40px
      &.status
        padding-left: 30px
      &.links
        padding-left: 20px
      .fa-warning
        margin-right: 5px
