@import 'nib'

$green = #8CC63F
$gray = #999999
$lightGray = #CCCCCC

#planning-admin
  tbody
    tr
      td:hover
        background-color: #eee
        cursor: pointer
  tfoot
    tr
      th
        background: white

.add-person-modal
  .header
    margin-bottom: 20px
    padding: 10px
    background: #f6f6f6
    h3
      margin: 4px 5px
    .form-inline
      float: right
      .control-label
        margin-right: 5px
  .people-list
    column-count: 4
    column-width: 200px
    orphans: 10
    max-height: 71vh
    overflow: auto
    h3:first-child
      margin-top: 0
    h3
      margin-bottom: 20px
    ul
      li
        display: inline-block
        margin-bottom: 5px
        padding: 5px 10px
        font-size: 16px
        border-radius: 5px
        cursor: pointer
        .bullet
          width: 17px
          height: 17px
          border-radius: 50%
          margin-right: 10px
        .check, .remove
          display: none
          position: relative
          top: 2px
          left: 1px
          width: 17px
          font-size: 16px
          margin-right: 10px
        .bullet, .name
          display: inline-block
          vertical-align: middle
        .name
          display: inline-block
          width: 150px
          margin-top: 2px
          overflow: hidden
          text-overflow: ellipsis
          white-space: nowrap
        &:hover:not(.selected)
          padding: 3px 8px
          border: 2px solid #4E9BED
          .bullet
            background: #4E9BED
        &.selected
          padding: 5px 10px
          color: white
          background: #4e9bed
          .bullet
            display: none
          .check
            display: inline-block
          &:hover
            .check
              display: none
            .remove
              display: inline-block
    .available-people
      h3
        color: $green
      ul li .bullet
        background: $green
    .people-who-did-not-answer
      color: $gray
      ul li .bullet
        background: $gray
    .unavailable-people
      color: $lightGray
      ul li .bullet
        background: $lightGray
